{
  "automock": false,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/",
    "/src/resources/"
  ],
  "coverageReporters": [
    "json"
  ],
  "testMatch": [
    "**/test/**/*.test.js",
    "**/__tests__/*.test.js"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/test/resources/"
  ],
  "testEnvironment": "node",
  "testTimeout": 15000,
  "reporters": [
    "default",
    "jest-junit"
  ]
}
